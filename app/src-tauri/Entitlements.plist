<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Disable App Sandbox for screen capture to work -->
    <!-- ScreenCaptureKit requires the app to NOT be sandboxed -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Screen capture permission for ScreenCaptureKit (hardened runtime) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Audio input for recording with microphone -->
    <key>com.apple.security.device.audio-input</key>
    <true/>

    <!-- Microphone access -->
    <key>com.apple.security.device.microphone</key>
    <true/>

    <!-- Camera access for webcam recording -->
    <key>com.apple.security.device.camera</key>
    <true/>

    <!-- Allow outgoing network connections (for potential future features) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File access for saving recordings/screenshots -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow Apple Events for automation (needed for some system integrations) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
</dict>
</plist>
