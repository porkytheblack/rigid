{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rigid",
  "version": "0.1.3",
  "identifier": "systems.rigid.desktop",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3002"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Rigid",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.unsplash.com; img-src 'self' asset: https://asset.localhost data: blob: https://images.unsplash.com; media-src 'self' asset: https://asset.localhost blob:; style-src 'self' 'unsafe-inline'; script-src 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$HOME/**",
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Explore, document and deliver apps you did not write",
    "longDescription": "Rigid is a powerful developer tool that helps you build rigid systems. Explore codebases, document your findings, and deliver applications with confidence.",
    "copyright": "Copyright (c) 2024 Rigid Systems. All rights reserved.",
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ],
    "publisher": "Rigid Systems",
    "macOS": {
      "minimumSystemVersion": "12.3",
      "entitlements": "./Entitlements.plist",
      "infoPlist": "./Info.plist",
      "signingIdentity": "4S5M2N3B86",
      "hardenedRuntime": true
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "section": "devel",
        "priority": "optional"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ1MkE4M0I5RjU1M0U0RUEKUldUcTVGUDF1WU1xMWNvTkNIRGlnSHBXUmYrSFIxKzAzZElheEVSN0F0Nm5uNFkrSEtaN0FvS1UK",
      "endpoints": [
        "https://oasis.dterminal.net/rigid/update/{{target}}-{{arch}}/{{current_version}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
